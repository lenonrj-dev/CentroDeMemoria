{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "dev": "node scripts/dev.js",
    "dev:server": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:devops": "npm --prefix ../devops run dev",
    "build": "tsc -p tsconfig.json",
    "test": "npm run test:routes",
    "test:routes": "ts-node --transpile-only scripts/test-routes.ts",
    "verify:preflight": "node scripts/verify-preflight.mjs",
    "start": "node dist/server.js",
    "hash": "ts-node src/seed/hash-admin-password.ts",
    "inventory": "ts-node src/seed/content-inventory.ts"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.20.0",
    "morgan": "^1.10.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.19.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20"
  }
}
